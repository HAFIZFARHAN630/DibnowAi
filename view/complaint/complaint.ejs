          }
          console.log('Sidebar classes verified:', sidebar.className);
        }
        
        // Mobile-specific enhancements for all phones
        if (window.innerWidth <= 767) {
          console.log('Applying mobile enhancements for screen width:', window.innerWidth);
          
          // Improve touch interactions on task cards
          const taskCards = document.querySelectorAll('.task-card');
          taskCards.forEach(card => {
            card.style.cursor = 'pointer';
            card.style.touchAction = 'manipulation';
            
            // Add touch feedback
            card.addEventListener('touchstart', function() {
              this.style.transform = 'translateX(2px) scale(0.98)';
              this.style.transition = 'all 0.1s ease';
            }, { passive: true });
            
            card.addEventListener('touchend', function() {
              this.style.transform = '';
              this.style.transition = 'all 0.3s ease';
            }, { passive: true });
          });
          
          // Improve button interactions
          const buttons = document.querySelectorAll('.btn');
          buttons.forEach(btn => {
            btn.style.touchAction = 'manipulation';
            btn.style.cursor = 'pointer';
            
            // Ensure minimum touch target size
            if (btn.offsetHeight < 44) {
              btn.style.minHeight = '44px';
              btn.style.display = 'flex';
              btn.style.alignItems = 'center';
              btn.style.justifyContent = 'center';
            }
          });
          
          // Fix modal positioning on mobile
          const modals = document.querySelectorAll('.modal-dialog');
          modals.forEach(modal => {
            modal.style.margin = '10px';
            modal.style.maxWidth = 'calc(100vw - 20px)';
          });
          
          // Ensure proper viewport behavior
          let viewport = document.querySelector('meta[name="viewport"]');
          if (!viewport) {
            viewport = document.createElement('meta');
            viewport.name = 'viewport';
            document.head.appendChild(viewport);
          }
          viewport.content = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no';
          
          // Prevent zoom on form inputs (iOS)
          const inputs = document.querySelectorAll('input, textarea, select');
          inputs.forEach(input => {
            if (input.style.fontSize === '' || parseFloat(input.style.fontSize) < 16) {
              input.style.fontSize = '16px';
            }
          });
          
          console.log('Mobile enhancements applied successfully');
        }
        
        // Additional fixes for very small screens (iPhone 5 SE and similar)
        if (window.innerWidth <= 320) {
          console.log('Applying ultra-mobile fixes for screen width:', window.innerWidth);
          
          // Ensure content fits properly
          const container = document.querySelector('.container');
          if (container) {
            container.style.paddingLeft = '10px';
            container.style.paddingRight = '10px';
            container.style.maxWidth = '100%';
          }
          
          // Reduce font sizes if necessary
          const headings = document.querySelectorAll('h1, h2, h3, h4, h5, h6');
          headings.forEach(heading => {
            const currentSize = parseFloat(window.getComputedStyle(heading).fontSize);
            if (currentSize > 18) {
              heading.style.fontSize = Math.max(14, currentSize * 0.9) + 'px';
            }
          });
          
          console.log('Ultra-mobile fixes applied for very small screens');
        }
        
        // Handle orientation changes
