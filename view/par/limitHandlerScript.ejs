            text: data.message || 'Failed to add repair customer',
            confirmButtonColor: '#dc3545'
          });
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Error!',
          text: 'Something went wrong. Please try again.',
          confirmButtonColor: '#dc3545'
        });
      }
    });
  }
});
</script>
