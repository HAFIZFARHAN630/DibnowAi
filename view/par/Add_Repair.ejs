          <script>
            // Generate tracking ID in format RPR-YYYYMMDD-XXXXXX
            function generateTrackingId() {
              const now = new Date();
              const year = now.getFullYear();
              const month = (now.getMonth() + 1).toString().padStart(2, '0');
              const day = now.getDate().toString().padStart(2, '0');
              const randomStr = Math.random().toString(36).substring(2, 8).toUpperCase();
              return `RPR-${year}${month}${day}-${randomStr}`;
            }

            document.addEventListener('DOMContentLoaded', () => {
              const randomIdField = document.getElementById('randomId');
              if (randomIdField && !randomIdField.value) {
                randomIdField.value = generateTrackingId();
              }

              // Dynamic dropdown color change for Brand, Device Type, and Status
              const brandSelect = document.getElementById('Brand');
              const deviceSelect = document.getElementById('device');
              const statusSelect = document.querySelector('select[name="status"]');

              if (brandSelect) {
                brandSelect.addEventListener('change', function () {
                  // Remove previous brand classes
                  this.className = this.className.replace(/brand-\w+/g, '');
                  // Add new brand class
                  if (this.value) {
                    this.className += ' brand-' + this.value.replace(/ /g, '-');
                  }
                });
              }

              if (deviceSelect) {
                deviceSelect.addEventListener('change', function () {
                  // Remove previous device classes
                  this.className = this.className.replace(/device-\w+/g, '');
                  // Add new device class
                  if (this.value) {
                    this.className += ' device-' + this.value;
                  }
                });
              }

              if (statusSelect) {
                statusSelect.addEventListener('change', function () {
                  // Remove previous status classes
                  this.className = this.className.replace(/status-\w+/g, '');
                  // Add new status class
                  if (this.value) {
                    this.className += ' status-' + this.value;
                  }
                });
              }

              // Dynamic dropdown color change for Inventory Brand and Category
              const inventoryBrandSelect = document.getElementById('brand');
              const inventoryCategorySelect = document.getElementById('Category');

              if (inventoryBrandSelect) {
                inventoryBrandSelect.addEventListener('change', function () {
                  // Remove previous brand classes
                  this.className = this.className.replace(/brand-\w+/g, '');
                  // Add new brand class
                  if (this.value) {
                    this.className += ' brand-' + this.value.replace(/ /g, '-');
                  }
                });
              }

              if (inventoryCategorySelect) {
                inventoryCategorySelect.addEventListener('change', function () {
                  // Remove previous category classes
                  this.className = this.className.replace(/category-\w+/g, '');
                  // Add new category class
                  if (this.value) {
                    this.className += ' category-' + this.value.replace(/ /g, '-');
                  }
                });
              }
            });

            // Copy tracking ID to clipboard
            function copyTrackingId() {
              const trackingIdField = document.getElementById('randomId');
              const copyBtn = document.getElementById('copyBtn');

              if (trackingIdField && trackingIdField.value) {
                navigator.clipboard.writeText(trackingIdField.value).then(() => {
                  // Show success feedback
                  const originalText = copyBtn.innerHTML;
                  copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                  copyBtn.classList.remove('btn-outline-secondary');
                  copyBtn.classList.add('btn-success');

                  setTimeout(() => {
