<!-- Repair Form -->
<div class="modal fade" id="gadgetRepairModal" tabindex="-1" aria-labelledby="gadgetRepairModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content gadget-form-modal" style="height: 551px;margin-top: -23px;">
          <div class="modal-header">
              <h3 class="modal-title text-dark" id="gadgetRepairModalLabel" style="margin-left: auto; font-size: xx-large;margin-bottom: -17px;">Add Repair Custormer</h3>
              <button type="button" class="btn-close gadget-close-btn" data-bs-dismiss="modal" aria-label="Close">               
                 <i class="fas fa-times gadget-close-btn" data-bs-dismiss="modal" aria-label="Close"></i>
              </button>
          </div>
          <div class="modal-body" style="padding-top: 17px;">
              <form action="/repair" method="POST" enctype="multipart/form-data" class="gadget-form">
                <div class="row">
                  <!-- Random ID Field -->
                  <div class="col-md-6" style="display: none;">
                    <input type="text" class="form-control gadget-input" name="random_id" id="randomId"  readonly required>
                  </div>
                </div>
                
                <div class="row ">
                  <div class="col-md-6">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control gadget-input" name="fullName" required>
                  </div>
                  <div class="col-md-6">
                    <label for="mobileNumber" class="form-label">Mobile Number</label>
                    <input type="tel" class="form-control gadget-input" name="mobileNumber" required>
                    <div class="invalid-feedback">
                      This field is required.
                    </div>
                  </div>
                </div>

                <!--  -->
                <div class="row ">
                  <div class="col-md-6 mt-n2">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" class="form-control gadget-input" name="Price">
                  </div>
                  <div class="col-md-6 mt-n2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control gadget-input" name="email">
                  </div>
                </div>
                <!--  -->
                <div class="row ">
                  <div class="col-md-6 mt-n2">
                    <label for="brand" class="form-label">Brand Name</label>
                    <select class="form-select gadget-select" name="brand" id="Brand" required>
                      <% brand.forEach(brand => { %>
                      <option value="<%= brand.name %>">
                        <%= brand.name %>
                      </option>
                      <% }); %>
                      <option value="Apple">Apple</option>
                      <option value="Samsung">Samsung</option>
                      <option value="Oppo">Oppo</option>
                      <option value="Xiaomi">Xiaomi</option>
                      <option value="OnePlus">OnePlus</option>
                      <option value="Realme">Realme</option>
                      <option value="Vivo">Vivo</option>
                    </select>
                  </div>

                  <div class="col-md-6 mt-n2">
                    <label for="device" class="form-label">Choose Device</label>
                    <select class="form-select gadget-select" name="device" aria-label="Choose Device">
                      <option value="phone">Phone</option>
                      <option value="tablet">Tablet</option>
                      <option value="laptop">Laptop</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                </div>
                <!--  -->
                
                <div class="row">
                  <div class="col-md-6 mt-2">
                    <label for="deviceImage" class="form-label">Upload Device Image</label>
                    <input type="file" class="form-control gadget-file" name="deviceImage">
                  </div>
                  <div class="col-md-6 mt-2">
                    <label for="status" class="form-label">Device Status</label>
                    <select class="form-select gadget-select" name="status" aria-label="Status" required>
                      <option value="Pending">Pending</option>
                      <option value="Cancelled">Cancelled</option>
                      <option value="Progress">Progress</option>
                      <option value="Completed">Completed</option>
                      <option value="Delivered">Delivered</option>
                    </select>
                  </div> 
                </div>

                <!-- Tell Your Device Problem -->
                <div>
                  <label for="gadgetProblem" class="form-label">Tell Your Device Problem </label>
                  <textarea class="form-control gadget-textarea" id="gadgetProblem" name="gadgetProblem" rows="2"></textarea>
                
                  <div class="invalid-feedback">
                    This field is required.
                  </div>
                
                  <button type="submit" class="btn gadget-submit-btn mt-3">Submit</button>
                </div>
                
                <script>
                  let counter = localStorage.getItem('counter') ? parseInt(localStorage.getItem('counter')) : 1000;
                  document.addEventListener('DOMContentLoaded', () => {
                    const randomIdField = document.getElementById('randomId');
                    const sequentialId = `ID-${counter}`;
                    randomIdField.value = sequentialId;
                    counter++;
                    localStorage.setItem('counter', counter);
                  });
                </script>
        </form> 
          </div>
          </div>
</div>       
</div>
<!--end Repair Form -->



