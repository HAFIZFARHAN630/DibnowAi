<style>
  /* Professional Modal Styling */
  .professional-modal .modal-dialog {
    max-width: 900px;
    width: 100%;
    margin: 20px auto;
  }

  .professional-modal .modal-content {
    background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%);
    border: none;
    border-radius: 25px;
    box-shadow: 0 30px 100px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(15px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    width: 100%;
    overflow-x: hidden;   /* prevent horizontal overflow */
    word-wrap: break-word;
  }

  .professional-modal .modal-header {
    background: transparent;
    border: none;
    padding: 30px 50px 20px;
    position: relative;
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .professional-modal .modal-title {
    font-size: 36px;
    font-weight: 700;
    color: #ffffff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    text-align: center;
    width: 100%;
    margin: 0;
  }

  .professional-modal .modal-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 18px;
    text-align: center;
    margin: 10px 0 0 0;
    line-height: 1.5;
  }

  .professional-close-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    border: none;
    border-radius: 50%;
    color: white;
    font-size: 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  }

  .professional-close-btn:hover {
    transform: scale(1.1) rotate(90deg);
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
  }

  .professional-modal .modal-body {
    padding: 20px 50px 50px;
  }

  .professional-form .form-group {
    margin-bottom: 25px;
  }

  .professional-form .form-label {
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 12px;
    font-size: 18px;
    display: block;
  }

  .professional-form .form-control,
  .professional-form .form-select {
    width: 100%;
    height: 60px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 15px;
    padding: 18px 25px;
    font-size: 18px;
    background: rgba(255, 255, 255, 0.9);
    transition: all 0.3s ease;
    outline: none;
  }

  .professional-form .form-control:focus,
  .professional-form .form-select:focus {
    border-color: rgba(255, 255, 255, 0.8);
    box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.98);
  }

  .professional-submit-btn {
    width: 100%;
    height: 60px;
    background: linear-gradient(135deg, #00C853 0%, #00B894 100%);
    border: none;
    border-radius: 15px;
    color: #ffffff;
    font-size: 20px;
    font-weight: 700;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(0, 184, 148, 0.4);
    text-transform: uppercase;
    margin-top: 1rem;
}

/* Hover effect */
.professional-submit-btn:hover {
    background: linear-gradient(135deg, #00E676 0%, #00C853 100%);
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(0, 200, 83, 0.5);
    color: #ffffff;
}

/* Click (active) effect */
.professional-submit-btn:active {
    transform: scale(0.97);
    box-shadow: 0 5px 20px rgba(0, 200, 83, 0.4);
}


  /* Responsive Design */
  @media (max-width: 768px) {
    .professional-modal .modal-dialog {
      margin: 10px;
      max-width: 100%;
    }

    .professional-modal .modal-header,
    .professional-modal .modal-body {
      padding: 20px;
    }

    .professional-modal .modal-title {
      font-size: 26px;
    }

    .professional-modal .modal-subtitle {
      font-size: 14px;
    }

    .professional-form .form-control,
    .professional-form .form-select {
      height: 50px;
      font-size: 16px;
      padding: 12px 16px;
    }

    .professional-submit-btn {
      height: 50px;
      font-size: 16px;
    }
  }

 @media (max-width: 500px) {
  .professional-modal .modal-dialog {
    margin: 5px !important;
    max-width: 300px !important;
  }

  .professional-modal .modal-header,
  .professional-modal .modal-body {
    padding: 10px !important;
  }

  .professional-modal .modal-title {
    font-size: 18px;
    line-height: 1.2;
  }

  .professional-modal .modal-subtitle {
    font-size: 12px;
    line-height: 1.4;
    margin-top: 4px;
  }

  /* âœ… Stack inputs vertically instead of side by side */
  .professional-modal .col-md-6,
  .professional-modal .col-md-4 {
    width: 100% !important;
    flex: 0 0 100% !important;
    max-width: 100% !important;
  }

  .professional-form .form-control,
  .professional-form .form-select {
    height: 40px;
    font-size: 14px;
    padding: 8px 10px;
  }

  .professional-submit-btn {
    height: 40px;
    font-size: 14px;
    margin-top: 8px;
  }
  .modal-subtitle{
    visibility: hidden !important;
  }
}

</style>


<!-- Repair Form -->
<div class="modal fade professional-modal" id="gadgetRepairModal" tabindex="-1" aria-labelledby="gadgetRepairModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h2 class="modal-title" id="gadgetRepairModalLabel">
                <i class="fa-solid fa-tools me-3"></i>Add Repair Customer
              </h2>
              <p class="modal-subtitle">Create a new repair service request with customer details</p>
              <button type="button" class="professional-close-btn" data-bs-dismiss="modal" aria-label="Close">
                 <i class="fas fa-times"></i>
              </button>
          </div>
          <div class="modal-body">
              <form action="/repair" method="POST" enctype="multipart/form-data" class="professional-form">
                <div class="row" style="display: none;">
                  <div class="col-md-6">
                    <input type="text" class="form-control" name="random_id" id="randomId" readonly required>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="fullName" class="form-label">Full Name *</label>
                      <input type="text" class="form-control" name="fullName" required placeholder="Enter customer full name">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="mobileNumber" class="form-label">Mobile Number *</label>
                      <input type="tel" class="form-control" name="mobileNumber" required placeholder="Enter mobile number">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="Price" class="form-label">Repair Price</label>
                      <input type="number" class="form-control" name="Price" placeholder="Enter repair price">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="email" class="form-label">Email Address</label>
                      <input type="email" class="form-control" name="email" placeholder="Enter email address">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="brand" class="form-label">Brand Name *</label>
                      <select class="form-select" name="brand" id="Brand" required>
                        <option value="" disabled selected>Select Brand</option>
                        <% brand.forEach(brand => { %>
                        <option value="<%= brand.name %>">
                          <%= brand.name %>
                        </option>
                        <% }); %>
                        <option value="Apple">Apple</option>
                        <option value="Samsung">Samsung</option>
                        <option value="Oppo">Oppo</option>
                        <option value="Xiaomi">Xiaomi</option>
                        <option value="OnePlus">OnePlus</option>
                        <option value="Realme">Realme</option>
                        <option value="Vivo">Vivo</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="device" class="form-label">Device Type *</label>
                      <select class="form-select" name="device" required>
                        <option value="" disabled selected>Select Device Type</option>
                        <option value="phone">Phone</option>
                        <option value="tablet">Tablet</option>
                        <option value="laptop">Laptop</option>
                        <option value="other">Other</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="deviceImage" class="form-label">Device Image</label>
                      <input type="file" class="form-control" name="deviceImage" accept="image/*">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="status" class="form-label">Repair Status *</label>
                      <select class="form-select" name="status" required>
                        <option value="" disabled selected>Select Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Cancelled">Cancelled</option>
                        <option value="Progress">In Progress</option>
                        <option value="Completed">Completed</option>
                        <option value="Delivered">Delivered</option>
                      </select>
                    </div>
                  </div> 
                </div>

                <div class="form-group">
                  <label for="gadgetProblem" class="form-label">Device Problem Description</label>
                  <textarea class="form-control" id="gadgetProblem" name="gadgetProblem" rows="3" placeholder="Describe the device problem in detail"></textarea>
                </div>
                
                <button type="submit" class="professional-submit-btn">
                  <i class="fa-solid fa-tools me-2"></i>Create Repair Request
                </button>
                
                <script>
                  let counter = localStorage.getItem('counter') ? parseInt(localStorage.getItem('counter')) : 1000;
                  document.addEventListener('DOMContentLoaded', () => {
                    const randomIdField = document.getElementById('randomId');
                    const sequentialId = `ID-${counter}`;
                    randomIdField.value = sequentialId;
                    counter++;
                    localStorage.setItem('counter', counter);
                  });
                </script>
        </form> 
          </div>
          </div>
</div>       
</div>
<!--end Repair Form -->



