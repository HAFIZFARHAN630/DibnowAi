    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".confirm-btn").addEventListener("click", async function (event) {
            event.preventDefault(); // Always prevent default form submission

            const paymentMethod = document.getElementById("paymentMethod").value;
            const plan = document.getElementById("plan").value;

            if (paymentMethod === 'manual') {
                // Manual payment form will handle its own submission
                document.getElementById("planForm").submit();
                return;
            } else if (paymentMethod === 'payfast') {
                // Handle PayFast payment with AJAX call
                try {
                    console.log('üöÄ Initiating PayFast payment for plan:', plan);

                    // Show loading state
                    const confirmBtn = document.querySelector(".confirm-btn");
                    const originalText = confirmBtn.value;
                    confirmBtn.value = "Processing...";
                    confirmBtn.disabled = true;

                    // Make AJAX call to PayFast initiation endpoint
                    const response = await fetch('/payfast/initiate', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            amount: planPrices[currentPlan] || '20.88',
                            item_name: `${currentPlan} Plan Subscription`
                        })
                    });

                    const data = await response.json();

                    if (data.success && data.redirectUrl) {
                        console.log('‚úÖ PayFast payment initiated successfully');
                        console.log('üîó Redirecting to:', data.redirectUrl);

                        // Show success message briefly
                        confirmBtn.value = "Redirecting...";

                        // Redirect to PayFast Hosted Payment Page
                        setTimeout(() => {
                            window.location.href = data.redirectUrl;
                        }, 500);

                    } else {
                        console.error('‚ùå PayFast initiation failed:', data.message);
                        alert('Failed to initiate PayFast payment: ' + (data.message || 'Unknown error'));

                        // Reset button
                        confirmBtn.value = originalText;
                        confirmBtn.disabled = false;
                    }

                } catch (error) {
                    console.error('‚ùå Error initiating PayFast payment:', error);
                    alert('Error initiating PayFast payment. Please try again.');

                    // Reset button
                    const confirmBtn = document.querySelector(".confirm-btn");
                    confirmBtn.value = originalText;
                    confirmBtn.disabled = false;
                }

            } else {
                // Handle other payment methods with normal form submission
                document.getElementById("planForm").submit();
            }
        });
    });
