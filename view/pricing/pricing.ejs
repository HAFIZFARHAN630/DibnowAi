}
/* Close button styling */
.close-btn {
  position: absolute;
  top: 15px;
  right: 20px;
  font-size: 24px;
  color: #333;
  cursor: pointer;
  transition: color 0.3s ease;
}

.close-btn:hover {
  color: #ff0000;
}

/* Modal header styling */
.modal-content h3 {
  margin-top: 0;
  font-size: 1.8rem;
  color: #333333;
  font-weight: bold;
  margin-bottom: 15px;
}

/* Paragraph (selected plan) styling */
.modal-content p {
  font-size: 1rem;
  color: #666666;
  margin-bottom: 25px;
}

/* Button styling */
.btn.confirm-btn {
  display: inline-block;
  width: auto; 
  background-color: #007bff; 
  color: white;
  padding: 12px 20px; 
  font-size: 1rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn.confirm-btn:hover {
  background-color: #0056b3; 
  transform: scale(1.05);
}

/* Slide-in animation */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive design for smaller screens */
@media (max-width: 768px) {
