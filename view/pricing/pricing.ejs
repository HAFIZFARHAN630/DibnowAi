  <script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".confirm-btn").addEventListener("click", async function (event) {
            event.preventDefault(); // Always prevent default form submission

            const paymentMethod = document.getElementById("paymentMethod").value;
            const plan = document.getElementById("plan").value;

            if (!paymentMethod) {
                alert('Please select a payment method.');
                return;
            }

            if (paymentMethod === 'wallet') {
                // Wallet payment - check balance before submission
                const walletBalance = parseFloat(document.getElementById('walletBalanceAmount')?.textContent || '0');
                const planPrice = parseFloat(planPrices[currentPlan] || planPrices[currentPlan.toUpperCase()] || '0');

                console.log('Wallet payment check:', { walletBalance, planPrice, currentPlan });

                if (walletBalance < planPrice) {
                    showInsufficientBalanceModal(planPrice, walletBalance);
                    return;
                }

                // Proceed with wallet payment
                document.getElementById("planForm").submit();
                return;
            } else if (paymentMethod === 'manual') {
                // Manual payment form will handle its own submission
                document.getElementById("planForm").submit();
                return;
            } else if (paymentMethod === 'payfast') {
                // Handle PayFast payment with HTML form approach
                try {
                    console.log('üöÄ Initiating PayFast payment for plan:', plan);

                    // Show loading state
                    const confirmBtn = document.querySelector(".confirm-btn");
                    const originalText = confirmBtn.value;
                    confirmBtn.value = "Getting Token...";
                    confirmBtn.disabled = true;

                    // Make AJAX call to PayFast initiation endpoint
                    const response = await fetch('/pricing/payfast/initiate-token', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            plan: currentPlan,
                            amount: planPrices[currentPlan] || planPrices[currentPlan.toUpperCase()] || '0'
                        })
                    });

                    console.log('üì° Response status:', response.status);
                    console.log('üì° Response type:', response.headers.get('content-type'));

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    // ‚úÖ CORRECT: Handle HTML response (NOT JSON!)
                    const html = await response.text();
                    console.log('‚úÖ HTML received, length:', html.length);

                    if (html.length < 1000) {
                        throw new Error('Invalid response: HTML too short');
                    }

                    // ‚úÖ Replace page content with PayFast form
                    document.body.innerHTML = html;
                    console.log('‚úÖ PayFast form displayed successfully');

                } catch (error) {
                    console.error('‚ùå Error initiating PayFast payment:', error);
                    alert('Error initiating PayFast payment: ' + error.message + '\n\nPlease check console for details.');

                    // Reset button
                    const confirmBtn = document.querySelector(".confirm-btn");
                    if (confirmBtn) {
                        confirmBtn.value = originalText;
                        confirmBtn.disabled = false;
                    }
                }

            } else {
                // Handle other payment methods with normal form submission
                document.getElementById("planForm").submit();
            }
        });
    });
    </script>
    
    

