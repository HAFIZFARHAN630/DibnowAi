  <!-- JavaScript for Modal -->
  <script>
    // Open modal on plan selection
    document.querySelectorAll('.btn-select-plan').forEach(button => {
      button.addEventListener('click', function (e) {
        e.preventDefault();
        const plan = this.dataset.plan; 
        document.getElementById('selectedPlan').textContent = `You selected the ${plan} plan.`;
        document.getElementById('plan').value = plan;
        document.getElementById('planModal').style.display = 'block'; 
      });
    });

    // Close modal
    document.querySelector('.close-btn').addEventListener('click', function () {
      document.getElementById('planModal').style.display = 'none';
    });

    // Close modal when clicking outside the modal content
    window.addEventListener('click', function (e) {
      if (e.target === document.getElementById('planModal')) {
        document.getElementById('planModal').style.display = 'none';
      }
    });
  </script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".confirm-btn").addEventListener("click", function (event) {
            let bankOptionVisible = document.getElementById("bankOptions").classList.contains("show");
    
            if (bankOptionVisible) {
                event.preventDefault(); // Prevent form submission only for bank option
                
                // Show the modal for bank transfer
                var transferModal = new bootstrap.Modal(document.getElementById("transferModal"));
                transferModal.show();
            } else {
                // Allow normal form submission (PayPal)
                document.getElementById("paymentForm").submit();
            }
        });
    });
