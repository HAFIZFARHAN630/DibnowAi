<!-- shop -->
<div class="shop-detail">
  <div class="card">
    <div class="card-body p-4">
      <% products.forEach((items) => { %>
        <div class="row mb-5">
          <div class="col-lg-6">
            <div class="rounded overflow-hidden">
              <img src="<%= items.device_image ? `/uploads/${items.device_image}` : 'default.jpg' %>" 
                   alt="product-image" 
                   class="img-fluid" 
                   style="width: auto; border-radius: 0px !important;">
            </div>
          </div>

          <div class="col-lg-6 d-flex align-items-center">
            <div class="shop-content">
              <!-- Display In Stock or Out of Stock Badge -->
              <div class="d-flex align-items-center gap-2 mb-2">
                <% if (items.Quantity > 0) { %>
                  <span class="badge text-bg-success fs-2 fw-semibold">In Stock</span>
                <% } else { %>
                  <span class="badge text-bg-danger fs-2 fw-semibold">Out of Stock</span>
                <% } %>
              </div><br>

              <h4 class="fw-bold mb-3 text-black"><%= items.product_name %></h4>
              <p class="mb-3">Description: <%= items.gadget_problem %></p>
              <h4 class="fw-semibold mb-3">
                <span class="fs-5 text-muted">Retail Price: <%= items.Retail_Price %></span><br><br> 
                <span class="fs-5 text-muted">Sale Price: <%= items.Sale_Price %></span>
              </h4>
              <div class="d-flex align-items-center gap-3 py-4 text-muted">
                <h6 class="mb-0 fs-4 fw-semibold text-muted">Colors: <%= items.Color %></h6>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
<!-- Description -->
<div class="card">
  <div class="card-body p-4">
    <ul class="nav nav-pills user-profile-tab border-bottom" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="text-black nav-link position-relative rounded-0 active d-flex align-items-center justify-content-center bg-transparent fs-3 py-6"
          id="pills-description-tab"
          data-bs-toggle="pill"
          data-bs-target="#pills-description"
          type="button"
          role="tab"
          aria-controls="pills-description"
          aria-selected="true"
        >
          Description
        </button>
      </li>
    </ul>
    <div class="tab-content pt-4" id="pills-tabContent">
      <% products.forEach((items, index) => { %>
        <div
class="tab-pane fade <%= index === 0 ? 'show active' : '' %>"
id="pills-description-<%= index %>"
role="tabpanel"
aria-labelledby="pills-description-tab"
tabindex="0"
        >
          <h3 class="fs-5 fw-semibold mb-7 text-dark">
            This mobile offers a sleek design, powerful performance, and a stunning camera for capturing life's moments.          </h3>
          <p class="mb-7">
            <%- items.gadget_problem %>
          </p>
        </div>
      <% }) %>
    </div>
  </div>
</div>
