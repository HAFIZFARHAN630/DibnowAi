<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Brand Management</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
        <link rel="icon" href="\images\DIB-NOW-512.png" type="image/x-icon">


    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/bootstrap.css" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link href="/styles.css" rel="stylesheet">
    <link href="/styles1.css" rel="stylesheet">
    
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <style>
/* Professional Modal Styling */
.professional-modal .modal-dialog {
  max-width: 900px;
  width: 100%;
  margin: 20px auto;
}

.professional-modal .modal-content {
  background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%);
  border: none;
  border-radius: 25px;
  box-shadow: 0 30px 100px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(15px);
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.professional-modal .modal-header {
  background: transparent;
  border: none;
  padding: 30px 50px 20px;
  position: relative;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.professional-modal .modal-title {
  font-size: 36px;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  text-align: center;
  width: 100%;
  margin: 0;
}

.professional-modal .modal-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 18px;
  text-align: center;
  margin: 10px 0 0 0;
  line-height: 1.5;
}

.professional-close-btn {
  position: absolute;
  top: 20px;
  right: 20px;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  border: none;
  border-radius: 50%;
  color: white;
  font-size: 20px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
}

.professional-close-btn:hover {
  transform: scale(1.1) rotate(90deg);
  box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
}

.professional-modal .modal-body {
  padding: 20px 50px 50px;
}

.professional-form .form-group {
  margin-bottom: 25px;
}

.professional-form .form-label {
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12px;
  font-size: 18px;
  display: block;
}

.professional-form .form-control,
.professional-form .form-select {
  width: 100%;
  height: 60px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 15px;
  padding: 18px 25px;
  font-size: 18px;
  background: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
  outline: none;
}

.professional-form .form-control:focus,
.professional-form .form-select:focus {
  border-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
  background: rgba(255, 255, 255, 0.98);
}

.professional-form textarea.form-control {
  height: auto;
  min-height: 100px;
}

.professional-submit-btn {
  width: 100%;
  height: 60px;
  background: linear-gradient(135deg, #00C853 0%, #00B894 100%);
  border: none;
  border-radius: 15px;
  color: #ffffff;
  font-size: 20px;
  font-weight: 700;
  letter-spacing: 1px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(0, 184, 148, 0.4);
  text-transform: uppercase;
  margin-top: 1rem;
}

.professional-submit-btn:hover {
  background: linear-gradient(135deg, #00E676 0%, #00C853 100%);
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0, 200, 83, 0.5);
  color: #ffffff;
}

.professional-submit-btn:active {
  transform: scale(0.97);
  box-shadow: 0 5px 20px rgba(0, 200, 83, 0.4);
}

@media (max-width: 768px) {
  .professional-modal .modal-dialog {
    margin: 10px;
    max-width: 100%;
  }

  .professional-modal .modal-header,
  .professional-modal .modal-body {
    padding: 20px;
  }

  .professional-modal .modal-title {
    font-size: 26px;
  }

  .professional-modal .modal-subtitle {
    font-size: 14px;
  }

  .professional-form .form-control,
  .professional-form .form-select {
    height: 50px;
    font-size: 16px;
    padding: 12px 16px;
  }

  .professional-submit-btn {
    height: 50px;
    font-size: 16px;
  }
}
    </style>
</head>

<body>

    
    <%- include('../par/sidebar.ejs') %>

    <!-- Navbar Start -->
    <%- include('../par/header.ejs') %>
    <!-- Navbar End -->

    <!-- Alert Messages -->
    <% if (success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong><i class="icon fa fa-check-circle me-2"></i><%= success_msg %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong><%= error_msg %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <div class="body-wrapper">
        <div class="container-fluid ">
            <div class="card card-body py-3 ">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                            <div class="d-flex align-items-center">
                                <h4 class="mb-0 card-title me-2">Brands</h4>
                                <i class="bi bi-box"></i>
                            </div>
                            <div class="d-flex flex-column flex-md-row align-items-stretch align-items-md-center gap-2 w-100 w-md-auto justify-content-end">
                                <div style="background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%); padding: 12px 15px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 51, 204, 0.3); flex: 1; max-width: 400px;">
                                    <div style="position: relative;">
                                        <i class="bi bi-search" style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #ffffff; z-index: 10;"></i>
                                        <input type="text" id="brandSearch" class="form-control" placeholder="Search brands..." style="padding-left: 40px; border-radius: 8px; border: none; height: 40px; color: #ffffff !important; background: rgba(255, 255, 255, 0.2) !important;">
                                        <style>#brandSearch::placeholder { color: rgba(255, 255, 255, 0.7) !important; }</style>
                                    </div>
                                </div>
                                <button class="btn btn-dark" id="addBrandBtn" data-bs-toggle="modal" data-bs-target="#brandModal" style="white-space: nowrap;">
                                    <i class="bi bi-box"></i> Add New Brand
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Brands Table -->
            <div class="card card-body">
                <div class="table-responsive">
                    <table class="table search-table align-middle text-nowrap">
                        <thead class="header-item text-center">
                            <th style="color: black !important;">Brand Name</th>
                            <th style="color: black !important;">Description</th>
                            <th style="color: black !important;">Action</th>
                        </thead>
                        <tbody class="text-center">
                            <% if (brand && brand.length > 0) { %>
                                <% brand.forEach(brand => { %>
                                    <tr>
                                        <td><%= brand.name %></td>
                                        <td><%= brand.description %></td>
                                        <td>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <form action="" method="GET" class="me-2">
                                                    <button type="button" class="btn btn-link text-primary edit"  data-bs-toggle="modal"  data-bs-target="#updateBrandModal<%= brand.id %>" data-brand-id="<%= brand.id %>" data-brand-name="<%= brand.name %>" data-brand-description="<%= brand.description %>"> <i class="fs-4 fa-solid fa-pen-to-square text-primary"></i> </button>
                                                  </form>

                                                <form action="/Brand/delete/<%= brand.id %>" method="POST">
                                                  <button type="submit" class="button close-button" style="border:none;background-color:#FFFFFF;">
                                                    <i class="fa-solid fa-trash-can text-danger"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3" class="text-center">No brands found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Brand Modal -->
    <div class="modal fade professional-modal" id="brandModal" tabindex="-1" aria-labelledby="brandModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title" id="brandModalLabel">
              <i class="bi bi-box me-3"></i>Add Brand
            </h2>
            <p class="modal-subtitle">Create a new brand for your product catalog</p>
            <button type="button" class="professional-close-btn" data-bs-dismiss="modal" aria-label="Close">
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div class="modal-body">
            <form action="/Brand" method="post" class="professional-form" id="addBrandForm">
              <div class="form-group">
                <label for="name" class="form-label">Brand Name *</label>
                <input type="text" id="name" name="name" required class="form-control" placeholder="Enter brand name">
              </div>

              <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control" rows="3" placeholder="Enter brand description"></textarea>
              </div>

              <button type="submit" class="professional-submit-btn">
                <i class="bi bi-box me-2"></i>Add Brand
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
<!-- Add Brand Modal -->

<!-- update Brand Modal -->
<% brand.forEach(brand => { %>
      <div class="modal fade" id="updateBrandModal<%= brand.id %>" tabindex="-1" aria-labelledby="updateBrandModalLabel<%= brand.id %>" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content" style="background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%); padding: 50px; border-radius: 25px; box-shadow: 0 30px 100px rgba(0, 0, 0, 0.2); position: relative; backdrop-filter: blur(15px); border: 2px solid rgba(255, 255, 255, 0.3);">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="position: absolute; top: 20px; right: 20px; width: 40px; height: 40px; background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%); border: none; border-radius: 50%; color: white; font-size: 20px; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);" onmouseover="this.style.transform='scale(1.1) rotate(90deg)'; this.style.boxShadow='0 6px 20px rgba(255, 107, 107, 0.4)'" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 15px rgba(255, 107, 107, 0.3)'">
              <i class="fas fa-times"></i>
            </button>
            
            <div class="form-header" style="text-align: center; margin-bottom: 35px;">
              <h2 style="font-size: 36px; font-weight: 700; color: #ffffff; margin-bottom: 10px; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);"><i class="bi bi-box me-3"></i>Update Brand</h2>
              <p style="color: rgba(255, 255, 255, 0.9); font-size: 18px; line-height: 1.5; margin: 0;">Modify brand information</p>
            </div>
            
            <form action="/Brand/update/<%= brand.id %>" method="post">
              <div class="form-group" style="margin-bottom: 25px;">
                <label for="name<%= brand.id %>" class="form-label" style="font-weight: 600; color: #ffffff; margin-bottom: 12px; font-size: 18px; display: block; text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);">Brand Name *</label>
                <input type="text" id="name<%= brand.id %>" name="name" value="<%= brand.name %>" required class="form-control" style="width: 100%; height: 60px; border: 2px solid rgba(255, 255, 255, 0.3); border-radius: 15px; padding: 18px 25px; font-size: 18px; background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%); transition: all 0.3s ease; outline: none; backdrop-filter: blur(10px);" placeholder="Enter brand name" onfocus="this.style.borderColor='rgba(255, 255, 255, 0.8)'; this.style.boxShadow='0 0 0 4px rgba(255, 255, 255, 0.2)'; this.style.transform='translateY(-2px)'; this.style.background='rgba(255, 255, 255, 0.98)'" onblur="this.style.borderColor='rgba(255, 255, 255, 0.3)'; this.style.boxShadow='none'; this.style.transform='translateY(0)'; this.style.background='linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%)'">
              </div>
    
              <div class="form-group" style="margin-bottom: 25px;">
                <label for="description<%= brand.id %>" class="form-label" style="font-weight: 600; color: #ffffff; margin-bottom: 12px; font-size: 18px; display: block; text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);">Description</label>
                <textarea id="description<%= brand.id %>" name="description" class="form-control" style="width: 100%; height: 80px; border: 2px solid rgba(255, 255, 255, 0.3); border-radius: 15px; padding: 18px 25px; font-size: 18px; background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%); transition: all 0.3s ease; outline: none; backdrop-filter: blur(10px); resize: vertical;" placeholder="Enter brand description" onfocus="this.style.borderColor='rgba(255, 255, 255, 0.8)'; this.style.boxShadow='0 0 0 4px rgba(255, 255, 255, 0.2)'; this.style.transform='translateY(-2px)'; this.style.background='rgba(255, 255, 255, 0.98)'" onblur="this.style.borderColor='rgba(255, 255, 255, 0.3)'; this.style.boxShadow='none'; this.style.transform='translateY(0)'; this.style.background='linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%)'" style="color: #9ca3af;"><%= brand.description %></textarea>
              </div>
    
              <button type="submit" class="btn-submit" style="width: 100%; height: 60px; background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%); border: 2px solid rgba(255, 255, 255, 0.3); border-radius: 15px; color: #667eea; font-size: 20px; font-weight: 700; letter-spacing: 1px; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2); text-transform: uppercase; margin-top: 1rem;" onmouseover="this.style.background='linear-gradient(135deg, #f8fafc 0%, #ffffff 100%)'; this.style.transform='translateY(-3px)'; this.style.boxShadow='0 15px 40px rgba(255, 255, 255, 0.3)'; this.style.color='#764ba2'" onmouseout="this.style.background='linear-gradient(135deg, #ffffff 0%, #f8fafc 100%)'; this.style.transform='translateY(0)'; this.style.boxShadow='0 10px 30px rgba(255, 255, 255, 0.2)'; this.style.color='#667eea'">
                <i class="bi bi-box me-2"></i>Update Brand
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
    <!-- update Brand Modal -->
     


    <!-- footer -->
<%-include('../par/footer.ejs')%>
    <!-- footer -->
  
  

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Brand search functionality
    const searchInput = document.getElementById('brandSearch');
    
    if (!searchInput) return;
    
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase().trim();
        const rows = document.querySelectorAll('table tbody tr');
        
        rows.forEach(row => {
            const cells = row.querySelectorAll('td');
            if (cells.length === 1 && cells[0].hasAttribute('colspan')) return;
            
            const rowText = row.textContent.toLowerCase();
            row.style.display = (searchTerm === '' || rowText.includes(searchTerm)) ? '' : 'none';
        });
    });
  });
</script>
<!-- JavaScript Libraries -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
  <script src="js/main.js"></script>
  
  <%- include('../par/limitHandlerScript.ejs') %>
</body>
</html>
