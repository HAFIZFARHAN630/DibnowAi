<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Request</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="\bootstrap.css" rel="stylesheet">
    <!-- Template Stylesheet -->
    <link href="\styles.css" rel="stylesheet">
    <link href="\styles1.css" rel="stylesheet">

</head>
<body>  

    <%- include('../par/sidebar.ejs') %>
    <%- include('../par/header.ejs') %>
    
    
     
    <div class="body-wrapper" >
      <div class="container-fluid">
          <div class="card card-body py-3">
              <div class="row align-items-center">
                  <div class="col-md-12">
                      <div class="d-flex justify-content-between align-items-center">
                          <h4 class="mb-4 mb-sm-0 card-title"> Request</h4>
                
                      </div>
                  </div>
              </div>
          </div>
        
          <div class="card card-body">
              <div class="table-responsive">
                  <table class="table search-table align-middle text-nowrap" id="paginatedTable">
                      <thead class="header-item text-center">
                          <tr>
                              <th>First Name</th>
                              <th>Email</th>
                              <th>Phone Number</th>
                              <th>Transaction ID</th>
                              <th>Amount</th>
                              <th></th>
                          </tr>
                      </thead>
  
                      <script>
                      document.addEventListener("DOMContentLoaded", function () {
                          // On page load, disable any "Accept" buttons that were previously clicked
                          const acceptedUsers = JSON.parse(localStorage.getItem("acceptedUsers")) || [];
                          acceptedUsers.forEach(userId => {
                              const button = document.querySelector(`.accept-btn[data-user-id="${userId}"]`);
                              if (button) {
                                  button.innerText = "Accepted";
                                  button.disabled = true;
                              }
                          });
  
                          document.querySelectorAll(".accept-btn").forEach((button) => {
                              button.addEventListener("click", async function () {
                                  const userId = this.dataset.userId;
  
                                  try {
                                      const response = await fetch("/accept-user", {
                                          method: "POST",
                                          headers: { "Content-Type": "application/json" },
                                          body: JSON.stringify({ userId }),
                                      });
  
                                      const data = await response.json();
  
                                      if (!response.ok) {
                                          throw new Error(data.message || "Error accepting user request.");
                                      }
  
                                      // Store the accepted userId in localStorage
                                      const acceptedUsers = JSON.parse(localStorage.getItem("acceptedUsers")) || [];
                                      acceptedUsers.push(userId);
                                      localStorage.setItem("acceptedUsers", JSON.stringify(acceptedUsers));
  
                                      alert("User request accepted successfully!");
                                      this.innerText = "Accepted";
                                      this.disabled = true;
                                  } catch (error) {
                                      alert(error.message);
                                      console.error("Error:", error);
                                  }
                              });
                          });
                      });
                      </script>
                      
                      <!-- sss -->
                      <div class="modal fade" id="denyModal" tabindex="-1" aria-labelledby="denyModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header ps-3">
                                    <h5 class="modal-title text-dark" id="denyModalLabel">Deny User Request</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body col-md-12 " style="padding:5px 20px 5px 20px ;">
                                    <input type="hidden" id="denyUserId">
                                    <label for="denyReason">Reason for Denial:</label>
                                    <textarea id="denyReason" class="form-control" rows="3" placeholder="Enter reason..."></textarea>
                                </div>
                                <div class="modal-footer gap-2" style="padding:0px 25px 5px 0px">
                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-success" id="submitDeny">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                      <script>
                        document.addEventListener("DOMContentLoaded", function() {
                          // Handle Deny Button Click
                          document.querySelectorAll(".deny-btn").forEach(button => {
                            button.addEventListener("click", function() {
                              let userId = this.getAttribute("data-user-id");
                              document.getElementById("denyUserId").value = userId;
                              $("#denyModal").modal("show");
                            });
                          });
                      
                          // Submit Denial
                          document.getElementById("submitDeny").addEventListener("click", function() {
                            let userId = document.getElementById("denyUserId").value;
                            let reason = document.getElementById("denyReason").value;
                      
                            if (!reason.trim()) {
                              alert("Please enter a reason for denial.");
                              return;
                            }
                      
                            fetch("/deny-user", {
                              method: "POST",
                              headers: { "Content-Type": "application/json" },
                              body: JSON.stringify({ userId, reason })
                            })
                            .then(response => response.json())
                            .then(data => {
                              if (data.success) {
                                alert("User request denied successfully.");
                                $("#denyModal").modal("hide");
                                location.reload(); // Refresh page to reflect changes
                              } else {
                                alert("Error: " + data.message); // Show backend error message
                              }
                            })
                            .catch(error => {
                              console.error("Fetch error:", error);
                              alert("Request Send Successfully.");
                            });
                      
                          });
                        });
                </script>

                      <!-- sss -->
                      <tbody>
                          <% users.forEach(user => { %>
                              <tr class="search-items text-center">
                                  <td><%= user.first_name %> <%= user.last_name %></td>
                                  <td><%= user.email %></td>
                                  <td><%= user.phone_number %></td> 
                                  <td><%= user.transfer_id %></td>
                                  <td><%= user.amount %></td>
                                  <td>
                                      <button class="btn btn-success btn-sm accept-btn" data-user-id="<%= user.id %>">
                                          Accept
                                      </button>
                                      <button class="btn btn-danger btn-sm deny-btn" data-user-id="<%= user.id %>">Deny</button>
                                  </td>
                              </tr>
                          <% }); %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
  <scrpt src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>
  
</body>
