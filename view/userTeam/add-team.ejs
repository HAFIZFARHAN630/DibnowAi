        .form-select.dept-Sales { background: linear-gradient(135deg, #28a745 0%, #218838 100%); color: white; border-color: #28a745; }
        .form-select.dept-Support { background: linear-gradient(135deg, #007bff 0%, #0056b3 100%); color: white; border-color: #007bff; }
        .form-select.dept-Technical { background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; border-color: #dc3545; }
