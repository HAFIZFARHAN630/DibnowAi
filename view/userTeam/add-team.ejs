<script>
// Dynamic dropdown color change
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.getElementById('role');
    const deptSelect = document.getElementById('department');
    
    if (roleSelect) {
        roleSelect.addEventListener('change', function() {
            this.className = 'form-select role-' + this.value.replace(/ /g, '-');
        });
    }
    
    if (deptSelect) {
        deptSelect.addEventListener('change', function() {
            this.className = 'form-select dept-' + this.value;
        });
    }
});

// Handle form submission
document.getElementById('addUserTeamForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const submitBtn = this.querySelector('.btn-submit');
    const originalText = submitBtn.innerHTML;

    // Show loading state
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creating...';
    submitBtn.disabled = true;

    fetch('/userteam/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            name: document.getElementById('name').value,
            email: document.getElementById('email').value,
            role: document.getElementById('role').value,
            department: document.getElementById('department').value,
            phone: document.getElementById('phone').value
        })
    })
    .then(response => {
        console.log('Response status:', response.status);
        console.log('Response headers:', response.headers);

        // Check if the response is a redirect (status 300-399)
        if (response.status >= 300 && response.status < 400) {
            console.log('Redirect response detected, redirecting to team list');
            window.location.href = '/userteam/list';
        } else if (response.ok) {
            console.log('Success response, redirecting to team list');
            window.location.href = '/userteam/list';
        } else {
            console.log('Error response:', response.status);
            // Error - show error message
            return response.json().then(data => {
                console.log('Error response data:', data);
                if (data && data.message) {
                    alert(data.message);
                } else {
                    alert('Error creating team member. Please check your input and try again.');
                }
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }).catch(() => {
                // If we can't parse JSON, try text
                return response.text().then(text => {
                    console.log('Error response text:', text);
                    if (text.includes('error_msg')) {
                        alert('Error creating team member. Please check your input and try again.');
                    } else {
                        alert('An error occurred while creating the team member.');
                    }
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                });
            });
        }
    })
    .catch(error => {
        console.error('Network error:', error);
        alert('Network error occurred. Please check your connection and try again.');
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    });
});
</script>
