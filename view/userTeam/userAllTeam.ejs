// Function to update select background based on selected value
function updateSelectBackground(selectId) {
    const select = document.getElementById(selectId);
    const value = select.value;
    
    // Remove all previous classes
    select.classList.remove('selected-dept-billing', 'selected-dept-sales', 'selected-dept-support', 
                            'selected-dept-technical', 'selected-dept-management',
                            'selected-role-team', 'selected-role-lead', 'selected-role-supervisor', 'selected-role-manager');
    
    if (selectId === 'updateDepartment' && value) {
        switch(value) {
            case 'Billing': select.classList.add('selected-dept-billing'); break;
            case 'Sales': select.classList.add('selected-dept-sales'); break;
            case 'Support': select.classList.add('selected-dept-support'); break;
            case 'Technical': select.classList.add('selected-dept-technical'); break;
            case 'Management': select.classList.add('selected-dept-management'); break;
        }
    } else if (selectId === 'updateRole' && value) {
        switch(value) {
            case 'Team': select.classList.add('selected-role-team'); break;
            case 'Team Lead': select.classList.add('selected-role-lead'); break;
            case 'Supervisor': select.classList.add('selected-role-supervisor'); break;
            case 'Manager': select.classList.add('selected-role-manager'); break;
        }
    }
}

// Handle update form submission
document.getElementById('updateTeamForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const submitBtn = this.querySelector('.submit-btn');
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating...';
    submitBtn.disabled = true;
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    console.log('Sending update data:', data);
    
    fetch('/userteam/update', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => {
        console.log('Response status:', response.status);
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        console.log('Response data:', data);
        if (data.success) {
            const modal = bootstrap.Modal.getInstance(document.getElementById('updateTeamModal'));
            modal.hide();
            location.reload();
        } else {
            alert(data.message || 'Error updating team member');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Network error: ' + error.message);
    })
    .finally(() => {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    });
});

// Add event listeners for select dropdowns to update background on change
document.getElementById('updateDepartment').addEventListener('change', function() {
    updateSelectBackground('updateDepartment');
});

document.getElementById('updateRole').addEventListener('change', function() {
    updateSelectBackground('updateRole');
});

// Delete team member with confirmation
function deleteTeamMember(button) {
    const id = button.getAttribute('data-id');
    const name = button.getAttribute('data-name');

    if (confirm(`Are you sure you want to delete ${name}? This action cannot be undone.`)) {
        console.log('Deleting team member with ID:', id);

        fetch(`/userteam/delete/${id}`, {
            method: 'POST'
        })
        .then(response => {
            console.log('Delete response status:', response.status);
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('Delete response data:', data);
            if (data.success) {
                // Remove the row from table without full reload
                const row = document.querySelector(`button[onclick*="${id}"]`).closest('tr');
                if (row) {
                    row.remove();
                }
                
                // Show success message
                const alertDiv = document.createElement('div');
                alertDiv.className = 'alert alert-success alert-dismissible fade show';
                alertDiv.innerHTML = `
                    <i class="fas fa-check-circle me-2"></i>${data.message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.card-body').prepend(alertDiv);
                
                // Auto dismiss after 3 seconds
                setTimeout(() => {
                    if (alertDiv.parentNode) {
                        alertDiv.remove();
                    }
                }, 3000);
            } else {
                alert(data.message || 'Error deleting team member');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Network error: ' + error.message);
        });
    }
}
