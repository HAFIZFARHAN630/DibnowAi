        border-radius: 8px;
        padding: 8px 12px;
        font-size: 14px;
        background: white;
        transition: all 0.3s ease;
      }

      .filter-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        outline: none;
      }

      .filter-select option[value="Billing"] {
        background-color: #3b82f6;
        color: white;
      }

      .filter-select option[value="Sales"] {
        background-color: #10b981;
        color: white;
      }

      .filter-select option[value="Support"] {
        background-color: #f59e0b;
        color: white;
      }

      .filter-select option[value="Technical"] {
        background-color: #8b5cf6;
        color: white;
      }

      .filter-select option[value="Management"] {
        background-color: #ef4444;
        color: white;
      }

      .dept-billing {
        background-color: #3b82f6;
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 12px;
      }

      .dept-sales {
        background-color: #10b981;
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 12px;
      }

      .dept-support {
        background-color: #f59e0b;
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 12px;
      }

      .dept-technical {
        background-color: #8b5cf6;
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 12px;
      }

      .dept-management {
        background-color: #ef4444;
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 12px;
      }

      .dept-na {
        background-color: #6b7280;
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 12px;
      }

      /* Modal Styles - Same as verify-otp.ejs */
      .form-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        padding: 50px 40px 30px 40px;
        margin-top: 60px;
        border-radius: 25px;
        box-shadow: 0 30px 100px rgba(0, 0, 0, 0.2);
        width: 100%;
        position: relative;
        backdrop-filter: blur(15px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        min-height: auto;
      }

      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        border: none;
        border-radius: 50%;
        color: white;
        font-size: 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
      }

      .close-btn:hover {
        transform: scale(1.1) rotate(90deg);
        box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
      }

      .form-header {
        text-align: center;
        margin-bottom: 35px;
      }

      .form-title {
        font-size: 36px;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 10px;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
      }

      .form-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 18px;
        line-height: 1.5;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-label {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 12px;
        font-size: 18px;
        display: block;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      }

      .form-control {
        width: 100%;
        height: 50px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        padding: 12px 20px;
        font-size: 16px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
        transition: all 0.3s ease;
        outline: none;
        backdrop-filter: blur(10px);
      }

      .form-control:focus {
        border-color: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        background: rgba(255, 255, 255, 0.98);
      }

      .form-control::placeholder {
        color: #9ca3af;
      }

      .submit-btn {
        width: 100%;
        height: 50px;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        color: #667eea;
        font-size: 18px;
        font-weight: 700;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
        text-transform: uppercase;
      }

      .submit-btn:hover {
        background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(255, 255, 255, 0.3);
        color: #764ba2;
      }

      .submit-btn:active {
        transform: translateY(-1px);
      }

      /* Responsive Design for Modal */
      @media (max-width: 768px) {
        .form-container {
          padding: 30px 25px;
          max-width: 100%;
        }
        
        .form-title {
          font-size: 28px;
        }
        
        .form-subtitle {
          font-size: 14px;
        }
      }

      @media (max-width: 480px) {
        .form-container {
          padding: 25px 20px;
        }
        
        .form-title {
          font-size: 24px;
        }
        
        .form-control {
          height: 50px;
          font-size: 14px;
        }
        
        .submit-btn {
          height: 50px;
          font-size: 16px;
        }
      }

      .filter-label {
        font-weight: 600;
        color: #495057;
        font-size: 14px;
        margin: 0;
      }

      @media (max-width: 768px) {
        .filter-container {
          flex-direction: column;
          align-items: flex-start;
        }
        
        .filter-select {
          width: 100%;
        }
      }


    </style>
</head>

<body>

