  <%- include('../par/header.ejs') %>

  <div class="body-wrapper" style=" position: relative;">
    <div class="container-fluid">
     <div class="card card-body py-3">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-4 mb-sm-0 card-title">My Team Members <i class="bi bi-people-fill"></i></h4>
                            <small class="text-muted">
                                Plan: <strong><%= plan_name %></strong> |
                                <% if (plan_name === 'FREE' || plan_name === 'FREE TRIAL') { %>
                                    Limit: 2 members
                                <% } else if (plan_name === 'BASIC') { %>
                                    Limit: 6 members
                                <% } else if (plan_name === 'STANDARD') { %>
                                    Limit: 10 members
                                <% } else if (plan_name === 'PREMIUM') { %>
                                    Limit: Unlimited members
                                <% } else { %>
                                    No plan assigned
                                <% } %>
                            </small>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <input type="text" id="teamSearch" class="form-control" style="width: 250px;" placeholder="Search team members...">
                            <a href="/userteam/add" class="btn-add-team">
                                <i class="fas fa-user-plus"></i> Add Team Member
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-body">
            <div class="d-flex justify-content-end">
                <div class="filter-container">
                    <label for="departmentFilter" class="filter-label">Filter:</label>
                    <select class="filter-select" id="departmentFilter">
                        <option value="">All Departments</option>
                        <option value="Billing">Billing</option>
                        <option value="Sales">Sales</option>
                        <option value="Support">Support</option>
                        <option value="Technical">Technical</option>
                        <option value="Management">Management</option>
                    </select>
                </div>
            </div>
            <div class="table-responsive mt-3">
                <table class="table search-table align-middle text-nowrap" id="paginatedTable">
                    <thead class="header-item">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Department</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(user => { %>
                            <tr class="search-items" data-department="<%= user.department || '' %>">
                                <td style="color: #1f2324;">
                                    <div class="d-flex align-items-center">
                                        <img src="https://img.icons8.com/3d-fluency/94/user-male--v4.png" alt="user-male--v4"/>
                                        <div class="ms-3">
                                            <div class="user-meta-info">
                                                <h6 class="user-name mb-0 text-dark"><%= user.name %></h6>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td style="color: #1f2324;"><span class="usr-email-addr"><%= user.email %></span></td>
                                <td style="color: #1f2324;"><span class="usr-ph-no"><%= user.phone || 'N/A' %></span></td>
                                <td style="color: #1f2324;">
                                    <span class="usr-department
                                        <% if (user.department === 'Billing') { %>dept-billing
                                        <% } else if (user.department === 'Sales') { %>dept-sales
                                        <% } else if (user.department === 'Support') { %>dept-support
                                        <% } else if (user.department === 'Technical') { %>dept-technical
                                        <% } else if (user.department === 'Management') { %>dept-management
                                        <% } else { %>dept-na<% } %>">
                                        <%= user.department || 'N/A' %>
                                    </span>
                                </td>
                                <td style="color: #1f2324;"><span class="usr-role"><%= user.role || 'N/A' %></span></td>
                                <td>
                                    <div class="action-btn">
                                        <button type="button" class="btn btn-link text-success edit"
                                                data-id="<%= user._id %>"
                                                data-name="<%= user.name %>"
                                                data-email="<%= user.email %>"
                                                data-phone="<%= user.phone || '' %>"
                                                data-department="<%= user.department || '' %>"
                                                data-role="<%= user.role || '' %>"
                                                onclick="openEditModal(this)">
                                            <i class="fa-solid fa-pen-to-square text-success"></i>
                                        </button>
                                        <button type="button" class="btn btn-link text-danger p-0"
                                                data-id="<%= user._id %>"
                                                data-name="<%= user.name %>"
