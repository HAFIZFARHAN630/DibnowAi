<div class="hidden xl:block w-full">
  <table id="paginatedTable" class="w-full border-collapse rounded-xl shadow-lg overflow-hidden">
    <thead>
      <tr class="bg-gradient-to-br from-[#667eea] to-[#764ba2] text-white text-sm font-semibold uppercase tracking-wide">
        <th class="px-6 py-4 text-left bg-gradient-to-br from-[#667eea] to-[#764ba2]"><i class="bi bi-person me-2"></i>First Name</th>
        <th class="px-6 py-4 text-left bg-gradient-to-br from-[#667eea] to-[#764ba2]"><i class="bi bi-envelope me-2"></i>Email</th>
        <th class="px-6 py-4 text-left bg-gradient-to-br from-[#667eea] to-[#764ba2]"><i class="bi bi-phone me-2"></i>Phone Number</th>
        <th class="px-6 py-4 text-left bg-gradient-to-br from-[#667eea] to-[#764ba2]"><i class="bi bi-building me-2"></i>Company</th>
        <th class="px-6 py-4 text-left bg-gradient-to-br from-[#667eea] to-[#764ba2]"><i class="bi bi-credit-card me-2"></i>Plan</th>
        <th class="px-6 py-4 text-center bg-gradient-to-br from-[#667eea] to-[#764ba2]"><i class="bi bi-gear me-2"></i>Action</th>
      </tr>
    </thead>
    <tbody class="bg-white">
      <% if (users && users.length > 0) { %>
        <% users.forEach((user) => { %>
          <tr class="transition duration-300 hover:bg-indigo-50 hover:-translate-y-0.5 hover:shadow-md">
            <td class="px-6 py-4 align-middle"><%= user.first_name %></td>
            <td class="px-6 py-4 align-middle"><%= user.email %></td>
            <td class="px-6 py-4 align-middle"><%= user.phone_number %></td>
            <td class="px-6 py-4 align-middle"><%= user.company || 'N/A' %></td>
            <td class="px-6 py-4 align-middle">
              <% let planClass = 'bg-gray-100 text-gray-800'; %>
              <% if (user.plan_name && user.plan_name.toLowerCase().includes('free')) { %>
                <% planClass = 'bg-green-100 text-green-800'; %>
              <% } else if (user.plan_name && user.plan_name.toLowerCase().includes('basic')) { %>
                <% planClass = 'bg-blue-100 text-blue-800'; %>
              <% } else if (user.plan_name && user.plan_name.toLowerCase().includes('standard')) { %>
                <% planClass = 'bg-yellow-100 text-yellow-800'; %>
              <% } else if (user.plan_name && user.plan_name.toLowerCase().includes('premium')) { %>
                <% planClass = 'bg-purple-100 text-purple-800'; %>
              <% } %>
              <span class="inline-block px-3 py-1 rounded-full text-xs font-medium <%= planClass %>">
                <%= user.plan_name || 'No Plan' %>
              </span>
            </td>
            <td class="px-6 py-4 text-center">
              <div class="flex justify-center items-center gap-2">
                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editUserModal<%= user._id %>">
                  <i class="bi bi-pencil me-1"></i>Edit
                </button>
                <form action="/admin/delete/<%= user._id %>" method="POST" class="inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                    <i class="bi bi-trash me-1"></i>Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="6" class="px-6 py-8 text-center text-gray-500">
            <div class="flex flex-col items-center">
              <i class="bi bi-people text-2xl mb-2"></i>
              <h5 class="mt-2 text-lg font-medium">No Users Found</h5>
              <p class="text-sm">No users are currently registered in the system.</p>
            </div>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
