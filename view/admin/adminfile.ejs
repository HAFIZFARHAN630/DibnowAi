<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content gradient-modal">
      <button class="close-btn" data-bs-dismiss="modal" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
      
      <div class="modal-header gradient-header">
        <h1 class="modal-title gradient-title" id="addUserModalLabel">Add User</h1>
      </div>
      
      <div class="modal-body gradient-body">
        <form action="/admin/addUser" method="POST">
          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="add_first_name" class="form-label gradient-label">
                <i class="fas fa-user me-2"></i>First Name
              </label>
              <input type="text" class="form-control gradient-input" id="add_first_name" name="first_name" required placeholder="Enter first name">
            </div>
            
            <div class="mb-3 col-md-6">
              <label for="add_email" class="form-label gradient-label">
                <i class="fas fa-envelope me-2"></i>Email
              </label>
              <input type="email" class="form-control gradient-input" id="add_email" name="email" required placeholder="Enter email address">
            </div>

            <div class="mb-3 col-md-6">
              <label for="add_phone_number" class="form-label gradient-label">
                <i class="fas fa-phone me-2"></i>Phone Number
              </label>
              <input type="text" class="form-control gradient-input" id="add_phone_number" name="phone_number" required placeholder="Enter phone number">
