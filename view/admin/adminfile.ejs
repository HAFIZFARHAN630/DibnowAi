    <style>
      .body-wrapper {
        min-height: 100%;
        display: flex;
        flex-direction: column;
      }

      .btn-gradient {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: 2px solid rgba(16, 185, 129, 0.3);
        border-radius: 15px;
        color: white;
        font-weight: 700;
        padding: 12px 25px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.2);
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      #userSearch {
        border-radius: 25px;
        background-color: #f8f9fa;
        border: 2px solid #e9ecef;
        color: #212529;
        padding: 10px 20px;
        font-size: 14px;
        transition: all 0.3s ease;
      }

      #userSearch:focus {
        background-color: #ffffff;
        border-color: #10b981;
        box-shadow: 0 0 0 0.2rem rgba(16, 185, 129, 0.25);
        color: #212529;
      }

      #userSearch::placeholder {
        color: #6c757d;
      }

      .btn-gradient:hover {
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(16, 185, 129, 0.3);
        color: white;
      }

      /* Search functionality */
      .search-container {
        position: relative;
        margin-bottom: 20px;
      }

      .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 10;
      }

      .search-input-wrapper {
        position: relative;
      }

      .search-input-wrapper input {
        padding-left: 45px;
      }

      /* Enhanced Table Design */
      .table {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: none;
      }

      .table thead th {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: none;
        padding: 20px 15px;
        font-size: 14px;
      }
      @media screen and (max-width: 1288px) {
        .table {
          display: flex;
          flex-direction: column;
        }
        
      }
      .table tbody tr {
        transition: all 0.3s ease;
        border: none;
      }

      .table tbody tr:hover {
        background-color: #f8f9ff;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .table tbody td {
        padding: 18px 15px;
        border: none;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
      }

      /* Plan Badges */
      .plan-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-block;
        text-align: center;
        min-width: 100px;
      }

      .plan-free-trial {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
      }

      .plan-basic {
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
      }

      .plan-standard {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
      }

      .plan-premium {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
      }

      .plan-default {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(107, 114, 128, 0.3);
      }

      /* User Info Styling */
      .user-name {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 2px;
      }

      .user-email {
        color: #6b7280;
        font-size: 13px;
      }

      .user-phone {
        color: #374151;
        font-weight: 500;
      }

      .user-company {
        color: #6b7280;
        font-size: 13px;
      }

      /* Button Styling */
      .btn-action {
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 16px;
        transition: all 0.3s ease;
      }

      .btn-action:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      }

      .table tbody tr.search-hidden {
        display: none;
      }

      .no-results {
        text-align: center;
        padding: 40px;
        color: #6b7280;
      }

      .no-results i {
        font-size: 48px;
        margin-bottom: 15px;
        opacity: 0.5;
      }

      /* Modal Enhancements */
      .modal-dialog {
        max-width: 800px;
        width: 100%;
      }

      .modal-content.gradient-modal {
        background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%);
        border-radius: 25px;
        box-shadow: 0 30px 100px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(15px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        position: relative;
        margin-top: 80px;
      }

      .modal-header.gradient-header {
        border: none;
        text-align: center;
        padding: 35px 50px 20px;
      }

      .modal-title.gradient-title {
        font-size: 36px;
        font-weight: 700;
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        width: 100%;
      }

      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        border: none;
        border-radius: 50%;
        color: white;
        font-size: 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
      }

      .close-btn:hover {
        transform: scale(1.1) rotate(90deg);
        box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
      }

      .modal-body.gradient-body {
        padding: 0 50px 50px;
      }

      .form-label.gradient-label {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 12px;
        font-size: 18px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      }

      .form-control.gradient-input {
        height: 60px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        padding: 18px 25px;
        font-size: 18px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
      }

      .form-control.gradient-input:focus {
        border-color: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        background: rgba(255, 255, 255, 0.98);
        outline: none;
      }

      .form-select.gradient-input {
        height: 60px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        padding: 18px 25px;
        font-size: 18px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
      }

      .form-select.gradient-input:focus {
        border-color: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        background: rgba(255, 255, 255, 0.98);
        outline: none;
      }

      .submit-btn {
        width: 100%;
        height: 60px;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        color: #667eea;
        font-size: 20px;
        font-weight: 700;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
        text-transform: uppercase;
      }

      .submit-btn:hover {
        background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(255, 255, 255, 0.3);
        color: #764ba2;
      }

      @media (max-width: 768px) {
        .modal-content.gradient-modal {
          margin: 80px 15px 15px;
        }

        .modal-header.gradient-header {
          padding: 30px 25px 20px;
        }

        .modal-title.gradient-title {
          font-size: 28px;
        }

        .modal-body.gradient-body {
          padding: 0 25px 30px;
        }
      }

      @media (max-width: 480px) {
        .modal-header.gradient-header {
          padding: 25px 20px 20px;
        }

        .modal-title.gradient-title {
          font-size: 24px;
        }

        .modal-body.gradient-body {
          padding: 0 20px 25px;
        }

        .form-control.gradient-input,
        .form-select.gradient-input {
          height: 50px;
          font-size: 14px;
        }

        .submit-btn {
          height: 50px;
          font-size: 16px;
        }
      }
      @media screen and (max-width:786px) {
        .hide-on-small{
          display: none !important;
        }
      }
      .table-responsive{
        overflow-x: auto;
      }
    </style>

</head>
