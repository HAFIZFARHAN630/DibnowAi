<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8">
    <title>Active user</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Template Stylesheet -->
    <link href="/styles.css" rel="stylesheet">
    <link href="/styles1.css" rel="stylesheet">
    
   <style>
        .btn-gradient {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: 2px solid rgba(16, 185, 129, 0.3);
            border-radius: 15px;
            color: white;
            font-weight: 700;
            padding: 12px 25px;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.2);
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        #userSearch {
            border-radius: 25px;
            background-color: #f8f9fa;
            border: 2px solid #e9ecef;
            color: #212529;
            padding: 10px 20px;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        #userSearch:focus {
            background-color: #ffffff;
            border-color: #10b981;
            box-shadow: 0 0 0 0.2rem rgba(16, 185, 129, 0.25);
            color: #212529;
        }
        
        #userSearch::placeholder {
            color: #6c757d;
        }
        
        .btn-gradient:hover {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(16, 185, 129, 0.3);
            color: white;
        }
        
        .status-active {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
        }
        
        .status-expired {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <%- include('../par/sidebar.ejs') %>

    <!-- Navbar Start -->
    <%- include('../par/header.ejs') %>
    <!-- Navbar End -->

     <div class="body-wrapper">
        <div class="container-fluid">
            <div class="card card-body py-3">
                <div class="row align-items-center">
                    <div class="col-md-12 ">
                        <div class="d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-4 mb-sm-0 card-title me-1">Active Users <i class="bi bi-person-check"></i></h4>
                            <a href="/admin" class="btn btn-gradient">Back to All Users</a>
                        </div>
                    </div>
                </div>
            </div>
        <!-- content -->

            <!-- Active Users Table -->
            <div class="card card-body">
                <div class="mb-3">
                    <input type="text" id="userSearch" class="form-control" placeholder="Search active users by name, email, plan...">
                </div>
                <div class="table-responsive">
                    <table class="table align-middle text-nowrap" id="activeUsersTable">
                        <thead class="header-item text-center">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Plan</th>
                                <th>Start Date</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <% if (activeUsers && activeUsers.length > 0) { %>
                                <% activeUsers.forEach((payment) => { %>
                                    <tr>
                                        <td><%= payment.user.first_name %> <%= payment.user.last_name %></td>
                                        <td><%= payment.user.email %></td>
                                        <td><%= payment.plan %></td>
                                        <td><%= new Date(payment.startDate).toLocaleDateString() %></td>
                                        <td><%= new Date(payment.expiryDate).toLocaleDateString() %></td>
                                        <td><span class="status-active">Active</span></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center text-muted">No active users found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>  
        <!-- Content End -->

       
    </div>
</div>
<!-- JavaScript Libraries -->
      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Socket.IO Client -->
  <script src="/socket.io/socket.io.js"></script>

  <!-- Template Javascript -->
  <script src="/js/main.js"></script>

   
</body>
</html>