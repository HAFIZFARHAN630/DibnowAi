<div class="professional-form">
  <div class="form-container">
    <button type="button" class="close-btn" onclick="window.history.back()">
      <i class="fas fa-times"></i>
    </button>
    <div class="form-header">
      <h2><i class="fas fa-users-cog me-3"></i>Add Team Member</h2>
      <p>Create a new team member account with role-based access</p>
    </div>
    
    <% if (message) { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle me-2"></i><%= message %>
      </div>
    <% } %>

    <form action="/AdminTeam" method="POST">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="Username" class="form-label">Full Name *</label>
            <input type="text" class="form-control" id="Username" name="Username" required placeholder="Enter full name">
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group">
            <label for="Email" class="form-label">Email Address *</label>
            <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter email address">
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="password" class="form-label">Password *</label>
            <input type="password" class="form-control" id="password" name="password" required minlength="6" placeholder="Minimum 6 characters">
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label for="Number" class="form-label">Phone Number *</label>
            <input type="tel" class="form-control" id="Number" name="Number" required placeholder="Enter phone number">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="role" class="form-label">Team Role *</label>
            <select class="form-select" id="role" name="role" required>
              <option value="" disabled selected>Select Team Role</option>
              <option value="Team">Team Member</option>
              <option value="Team Lead">Team Lead</option>
              <option value="Supervisor">Supervisor</option>
              <option value="Manager">Manager</option>
            </select>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label for="department" class="form-label">Department *</label>
            <select class="form-select" id="department" name="department" required>
              <option value="" disabled selected>Select Department</option>
              <option value="Billing">Billing</option>
              <option value="Sales">Sales</option>
              <option value="Support">Support</option>
              <option value="Technical">Technical</option>
              <option value="Management">Management</option>
            </select>
          </div>
        </div>
      </div>

      <button type="submit" class="btn-submit">
        <i class="fas fa-users-cog me-2"></i>Create Team Member
      </button>
    </form>
  </div>
</div>
