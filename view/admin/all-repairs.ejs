<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>All Repairs - Admin</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="icon" href="\images\DIB-NOW-512.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/bootstrap.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../par/sidebar.ejs') %>
    <%- include('../par/header.ejs') %>

    <div class="container-fluid pt-4 px-4">
        
            <div class="card-header bg-white text-black">
                <h4 style="text-align: center !important; color: black !important;"><i class="bi bi-tools"></i> All Users' Repair Products <%= statusFilter ? '- ' + statusFilter : '' %></h4>
            </div>
            <div class="card-body">
                <div class="mb-3 mt-1 d-flex  gap-2 justify-content-end align-items-center">
                    <a href="/admin/all-repairs" class="btn btn-primary btn-lg">All</a>
                    <a href="/admin/all-repairs?status=Booking" class="btn btn-danger btn-lg">Booking</a>
                    <a href="/admin/all-repairs?status=Completed" class="btn btn-success btn-lg">Completed</a>
                    <a href="/admin/all-repairs?status=Delivered" class="btn btn-info btn-lg">Delivered</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="color: black !important;">Customer Name</th>
                                <th style="color: black !important;">Mobile</th>
                                <th style="color: black !important;">Device</th>
                                <th style="color: black !important;">Brand</th>
                                <th style="color: black !important;">Problem</th>
                                <th style="color: black !important;">Price</th>
                                <th style="color: black !important;">Status</th>
                                <th style="color: black !important;">Tracking ID</th>
                                <th style="color: black !important;">Owner</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (repairs && repairs.length > 0) { %>
                                <% repairs.forEach(repair => { %>
                                    <tr>
                                        <td><%= repair.fullName %></td>
                                        <td><%= repair.mobileNumber %></td>
                                        <td><%= repair.device %></td>
                                        <td><%= repair.brand %></td>
                                        <td><%= repair.gadgetProblem %></td>
                                        <td><%= repair.Price %></td>
                                        <td>
                                            <% if (repair.status === 'Completed') { %>
                                                <span class="badge bg-success">Completed</span>
                                            <% } else if (repair.status === 'Booking') { %>
                                                <span class="badge bg-danger">Pending</span>
                                            <% } else if (repair.status === 'Delivered') { %>
                                                <span class="badge bg-info">Delivered</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= repair.status %></span>
                                            <% } %>
                                        </td>
                                        <td><%= repair.random_id || 'N/A' %></td>
                                        <td><%= repair.user_id ? (repair.user_id.first_name + ' ' + (repair.user_id.last_name || '')) : 'Unknown' %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" class="text-center">No repairs found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            
        
    </div>

    <%- include('../par/footer.ejs') %>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
