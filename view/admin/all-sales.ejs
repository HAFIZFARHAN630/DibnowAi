<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>All Sales - Admin</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="icon" href="\images\DIB-NOW-512.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/bootstrap.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../par/sidebar.ejs') %>
    <%- include('../par/header.ejs') %>
     

    <div class="container-fluid pt-4 px-4">
    
            <div class="card-header bg-success text-white">
                <h4><i class="bi bi-cart-fill"></i> All Users' Sales Products</h4>
            </div>
           
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="color: black !important;" >Customer Name</th>
                                <th style="color: black !important;">Mobile Number</th>
                                <th style="color: black !important;">Product</th>
                                <th style="color: black !important;">Price</th>
                                <th style="color: black !important;">Type</th>
                                <th style="color: black !important;">Sale Date</th>
                                <th style="color: black !important;">Sold By</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (soldItems && soldItems.length > 0) { %>
                                <% soldItems.forEach(item => { %>
                                    <tr>
                                        <td><%= item.fullName %></td>
                                        <td><%= item.Number %></td>
                                        <td><%= item.Product %></td>
                                        <td><%= item.Price %></td>
                                        <td>
                                            <% if (item.Type === 'New') { %>
                                                <span class="badge bg-success">New</span>
                                            <% } else if (item.Type === 'Used') { %>
                                                <span class="badge bg-warning">Used</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Return</span>
                                            <% } %>
                                        </td>
                                        <td><%= item.sale_date ? new Date(item.sale_date).toLocaleDateString() : 'N/A' %></td>
                                        <td><%= item.user_id ? (item.user_id.first_name + ' ' + (item.user_id.last_name || '')) : 'Unknown' %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center">No sales found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            
        
    </div>

   
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    
</body>
</html>
