<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>All Admins</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="icon" href="\images\DIB-NOW-512.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/bootstrap.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../par/sidebar.ejs') %>
    <%- include('../par/header.ejs') %>

    <div class="container-fluid pt-4 px-4">
        <div class="card-header bg-white text-black">
            <h4 style="text-align: center !important; color: black !important;"><i class="fa-solid fa-user-tie"></i> All Administrators</h4>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="color: black !important;">Name</th>
                        <th style="color: black !important;">Phone</th>
                        <th style="color: black !important;">Created Date</th>
                        <th style="color: black !important;">Created By</th>
                        <th style="color: black !important;">Status</th>
                        <th style="color: black !important;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (admins && admins.length > 0) { %>
                        <% admins.forEach(admin => { %>
                            <tr id="admin-<%= admin._id %>">
                                <td>
                                    <%= admin.first_name %> <%= admin.last_name || '' %><br>
                                    <small class="text-muted"><%= admin.email %></small>
                                </td>
                                <td><%= admin.phone_number || 'N/A' %></td>
                                <td><%= admin.createdAt ? new Date(admin.createdAt).toLocaleDateString() : 'N/A' %></td>
                                <td>
                                    <% if (admin.created_by) { %>
                                        <%= admin.created_by.first_name %> <%= admin.created_by.last_name || '' %><br>
                                        <small class="text-muted"><%= admin.created_by.email ? admin.created_by.email : 'No email' %></small>
                                    <% } else { %>
                                        System
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge <%= admin.isActive ? 'bg-success' : 'bg-danger' %>" id="status-<%= admin._id %>">
                                        <%= admin.isActive ? 'Active' : 'Disabled' %>
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-sm <%= admin.isActive ? 'btn-danger' : 'btn-success' %>" 
                                            onclick="toggleStatus('<%= admin._id %>')" 
                                            id="btn-<%= admin._id %>">
                                        <%= admin.isActive ? 'Disable' : 'Enable' %>
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No admins found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../par/footer.ejs') %>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleStatus(adminId) {
            fetch(`/admin/toggle-status/${adminId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    const statusBadge = document.getElementById(`status-${adminId}`);
                    const btn = document.getElementById(`btn-${adminId}`);
                    
                    if (data.isActive) {
                        statusBadge.className = 'badge bg-success';
                        statusBadge.textContent = 'Active';
                        btn.className = 'btn btn-sm btn-danger';
                        btn.textContent = 'Disable';
                    } else {
                        statusBadge.className = 'badge bg-danger';
                        statusBadge.textContent = 'Disabled';
                        btn.className = 'btn btn-sm btn-success';
                        btn.textContent = 'Enable';
                    }
                }
            });
        }
    </script>
</body>
</html>
