    .card-grid { grid-template-columns: 1fr; padding: 0 0.5rem; }
    .user-card .card-body { padding: 0; }
    .user-card .btn { font-size: 0.78rem; padding: 0.35rem 0.5rem; }
  }

  /* optional small visual tweak */
  .user-card .badge { font-size: 0.82rem; }
  .user-card .meta { font-size: 0.85rem; }
</style>

<div class="table-wrapper">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Plan</th>
          <th>Balance</th>
          <th>Quota Limit</th>
          <th>Quota Used</th>
          <th>Remaining Quota</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (usersWithWallets && usersWithWallets.length > 0) { %>
          <% usersWithWallets.forEach(user => { %>
            <tr class="<%= user.balance < 10 ? 'low-balance' : '' %>">
              <td><%= user.first_name %> <%= user.last_name %> <br><small><%= user.email %></small></td>
              <td><span class="badge bg-secondary"><%= user.plan_name %></span></td>
              <td><strong>£<%= user.balance.toFixed(2) %></strong></td>
              <td><%= user.plan_limit %></td>
              <td><%= user.quota_used %></td>
              <td><span class="badge <%= (user.plan_limit - user.quota_used > 0) ? 'bg-success' : 'bg-danger' %>"><%= user.plan_limit - user.quota_used %></span></td>
              <td>
                <a href="/admin/update/<%= user._id %>" class="btn btn-sm btn-primary btn-admin">Edit</a>
                <a href="/admin/wallet-transactions/<%= user._id %>" class="btn btn-sm btn-outline-info btn-admin">View Transactions</a>
              </td>
            </tr>
          <% }) %>
