  </div>

<style>
  /* by default show table, hide cards */
  .card-grid { display:none; }

  /* under 1300px: hide table, show cards */
  @media (max-width: 1299.98px) {
    .table-wrapper { display: none !important; }
    .card-grid {
      display: block;
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: 1rem;
      align-items: start;
    }
  }

