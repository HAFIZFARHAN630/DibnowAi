<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet Management - Admin</title>
    <link href="/bootstrap.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
    <style>
        .summary-card { background: #f8f9fa; border-radius: 10px; padding: 1.5rem; margin-bottom: 1.5rem; text-align: center; }
        .table th { background-color: #e9ecef; }
        .low-balance { background-color: #fff3cd; }
        .btn-admin { border-radius: 5px; }
    </style>
</head>
<body>
    <%- include('../par/header') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('../par/sidebar') %>
            <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h2 class="mt-4 mb-4">Wallet Management</h2>
                <% if (typeof success_msg !== 'undefined' && success_msg) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (typeof error_msg !== 'undefined' && error_msg) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="summary-card">
                            <h5>Total Users with Wallets</h5>
                            <h3><%= totalWallets %></h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="summary-card">
                            <h5>Total Balance</h5>
                            <h3>£<%= totalBalance.toFixed(2) %></h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="summary-card">
                            <h5>Low Balance Users</h5>
                            <h3><%= lowBalanceUsers %></h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="summary-card">
                            <h5>Total Transactions</h5>
                            <h3><%= totalTransactions %></h3>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Plan</th>
                                <th>Balance</th>
                                <th>Quota Limit</th>
                                <th>Quota Used</th>
                                <th>Remaining Quota</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (usersWithWallets && usersWithWallets.length > 0) { %>
                                <% usersWithWallets.forEach(user => { %>
                                    <tr class="<%= user.balance < 10 ? 'low-balance' : '' %>">
                                        <td><%= user.first_name %> <%= user.last_name %> <br><small><%= user.email %></small></td>
                                        <td><span class="badge bg-secondary"><%= user.plan_name %></span></td>
                                        <td><strong>£<%= user.balance.toFixed(2) %></strong></td>
                                        <td><%= user.plan_limit %></td>
                                        <td><%= user.quota_used %></td>
                                        <td><span class="badge <%= (user.plan_limit - user.quota_used > 0) ? 'bg-success' : 'bg-danger' %>"><%= user.plan_limit - user.quota_used %></span></td>
                                        <td>
                                            <a href="/admin/update/<%= user._id %>" class="btn btn-sm btn-primary btn-admin">Edit</a>
                                            <a href="/admin/wallet-transactions/<%= user._id %>" class="btn btn-sm btn-outline-info btn-admin">View Transactions</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="7" class="text-center">No users with wallets.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="text-end mt-3">
                    <a href="/admin" class="btn btn-secondary">Back to Admin Dashboard</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('../par/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>