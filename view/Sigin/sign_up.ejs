  <link href="/styles.css" rel="stylesheet">
  <link href="/styles1.css" rel="stylesheet">

  <style>
    /* Professional Sign Up Page Styling */
    body {
      background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    .auth-card {
      background: linear-gradient(135deg, #ffffff 0%, #f8fafc 25%, #f1f5f9 50%, #e2e8f0 75%, #cbd5e1 100%);
      backdrop-filter: blur(25px);
      border-radius: 25px;
      padding: 40px;
      box-shadow: 0 30px 100px rgba(116, 79, 167, 0.3);
      border: 2px solid rgba(255, 255, 255, 0.4);
      max-width: 750px;
      width: 100%;
      margin: 0 auto;
    }

    .auth-card h1 {
      color: #0749D3;
      -webkit-background-clip: text;
      
      background-clip: text;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      text-align: center;
    }

    .auth-card p {
      color: #6b7280;
      font-size: 1.1rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .form-label {
      font-weight: 600;
      color: #374151;
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }

    .form-control {
      height: 50px;
      border: 2px solid rgba(116, 79, 167, 0.2);
      border-radius: 12px;
      padding: 12px 16px;
      font-size: 1rem;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }

    .form-control:focus {
      border-color: #744FA7;
      box-shadow: 0 0 0 4px rgba(116, 79, 167, 0.15);
      background: rgba(255, 255, 255, 0.95);
      transform: translateY(-2px);
    }

    .btn-primary {
      height: 55px;
      background: linear-gradient(135deg, #744FA7 0%, #5a3a85 100%);
      border: none;
      border-radius: 12px;
      font-size: 1.1rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(116, 79, 167, 0.3);
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #5a3a85 0%, #744FA7 100%);
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(116, 79, 167, 0.4);
    }

    .text-primary {
      color: #744FA7 !important;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .text-primary:hover {
      color: #5a3a85 !important;
      text-decoration: underline;
    }

    /* .bg-dark {
      background: linear-gradient(135deg, #1f2937 0%, #111827 100%) !important;
    } */

    #main-wrapper {
      background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%) !important;
    }

    .bg-body {
      background: linear-gradient(135deg, #0033cc 0%, #33ccff 100%) !important;
    }

    /* Carousel styles */
    .login-carousel {
      max-width: 100%;
      margin-top: 60px;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    }

    .login-carousel .carousel-inner {
      border-radius: 20px;
    }

    .login-carousel img {
      width: 100%;
      height: 500px;
      object-fit: cover;
      border-radius: 16px;
    }

    .inline-logo {
      width: 50px;
      height: 50px;
      object-fit: contain;
      margin-left: 10px;
      vertical-align: middle;
    }

    /* Responsive adjustments for 1024px and 1440px */
    @media (min-width: 992px) and (max-width: 1440px) {
      .col-lg-11 {
        margin-top: 40px !important;
      }
      .login-carousel {
        margin-top: 40px;
      }
      .login-carousel img {
        height: 280px;
      }
      .inline-logo {
        width: 40px;
        height: 40px;
        flex-shrink: 0;
      }
      h2.fs-10 {
        font-size: 1rem !important;
      }
      .d-flex.align-items-center {
        flex-wrap: nowrap;
      }
    }

    .welcome-section {
      padding: 50px 35px 50px 35px;
    }

    .welcome-section h2 {
      font-size: clamp(1.5rem, 4vw, 2.5rem);
    }

    .welcome-section span {
      font-size: clamp(0.9rem, 2vw, 1.1rem);
    }

    @media (min-width: 2560px) {
      .welcome-section {
        padding: 50px 120px;
      }
      
      .auth-card {
        max-width: 850px;
      }
    }

    @media (min-width: 1441px) and (max-width: 2559px) {
      .welcome-section {
        padding: 50px 80px;
      }
    }

    @media (min-width: 992px) and (max-width: 1440px) {
      .welcome-section {
        padding: 50px 50px 50px 35px;
      }
    }

    @media (max-width: 991px) {
      .auth-card {
        padding: 35px 30px;
        max-width: 95%;
      }
    }

    @media (max-width: 768px) {
      .auth-card {
        padding: 30px 25px;
        max-width: 90%;
        border-radius: 20px;
      }

      .form-control {
        height: 45px;
      }

      .auth-card h1 {
        font-size: 2rem;
      }

      .auth-card p {
        font-size: 1rem;
      }
    }

    @media (max-width: 480px) {
      .auth-card {
        padding: 25px 20px;
        max-width: 95%;
        border-radius: 15px;
      }

      .form-control {
        height: 42px;
        font-size: 14px;
      }

      .btn-primary {
        height: 50px;
      }

      .auth-card h1 {
        font-size: 1.75rem;
      }

      .auth-card p {
        font-size: 0.95rem;
      }
    }
  </style>

</head>

<body class="link-sidebar">

  <div id="main-wrapper">
    <div class="position-relative radial-gradient w-100" style="height: 100vh;">
      <div class="position-relative z-index-5 h-100">
        <div class="row gx-0 h-100">

          <div class="col-lg-6 col-xl-6 col-xxl-6 h-100"
            style="background: linear-gradient(135deg, #744FA7 0%, #5a3a85 50%, #744FA7 100%);">
            <div class="h-100 bg-body row justify-content-center align-items-center p-5">
              <div class="col-12 auth-card">

                <h1 class="mb-2 mt-3 fs-7 fw-bolder" style="color: #0749D3;">Sign Up</h1>

                <p class="mb-9" style="text-decoration: underline; color: #0749D3;">Sign Up Now for a Smarter Future!</p>


                <!--  -->
                <form action="/sign_up" method="POST">
                  <div class="row mb-3 mt-5">
                    <div class="col-md-6">
                      <label for="first-name" class="form-label">First Name</label>
                      <input type="text" class="form-control" id="first-name" name="first_name" required>
                    </div>
                    <div class="col-md-6">
                      <label for="last-name" class="form-label">Last Name</label>
                      <input type="text" class="form-control" id="last-name" name="last_name">
                    </div>
                  </div>

                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="email" class="form-label">E-mail</label>
                      <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="col-md-6">
                      <label for="phone-number" class="form-label">Phone Number</label>
                      <input type="text" class="form-control" id="phone-number" name="phone_number" required>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="col-md-6">
                      <label for="company" class="form-label">Company</label>
                      <input type="text" class="form-control" id="company" name="company">
                    </div>
                  </div>

                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="postcode" class="form-label">Postcode</label>
                      <input type="text" class="form-control" id="postcode" name="postcode">
                    </div>
                    <div class="col-md-6">
                      <label for="address" class="form-label">Address</label>
                      <input type="text" class="form-control" id="address" name="address">
                    </div>
                  </div>
                  <button type="submit" class="w-100 py-8 mb-4  fw-bold rounded-2 text-white border-0" style=" background: linear-gradient(135deg, #3836ac 0%, #33ccff 100%)">Register</button>
                </form>

                <div class="d-flex align-items-center justify-content-center">
                  <p class="fs-4 mb-0 fw-medium" style="color: #0749D3";>Already have an account?</p>
                  <a class="fw-medium ms-2" href="/sign_in" style="color: #0749D3;">Sign In</a>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6 col-xl-6 col-xxl-6 position-relative bg-dark d-none d-lg-block h-100">

            <!--  -->
            <div class="d-lg-flex align-items-center z-index-5 position-relative ">
              <div class="row w-100" style="margin-left: 35px; margin-right: 35px;">
                <div class="col-lg-11 col-xxl-11 col-xl-11" style="margin-top: 80px;">
                  <div class="d-flex align-items-center mb-3">
                    <h2 class="text-white fs-10 mb-0 lh-sm">
                      Welcome to <%= title %>
                    </h2>
                    <img src="<%= info?.favicon ? '/uploads/' + info.favicon : '/images/DIB-NOW-512.png' %>" class="inline-logo" alt="Logo" />
                  </div>
                  <span class="opacity-75 fs-6 fw-normal text-white d-block mb-4">
                    <%= welcome_description %>
                  </span>
                  
                  <!-- Image Carousel -->
                  <div id="signupCarousel" class="carousel slide carousel-fade login-carousel" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="/images/dibnowlogin.jpeg" alt="Dibnow Login">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/dibnowpc.jpg" alt="Dibnow PC">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/dibnow mobile.jpg" alt="Dibnow Mobile">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/pcreapir.jpg" alt="PC Repair">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/shopmanagement.jpg" alt="Shop Management">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/mobierepair.jpg" alt="Mobile Repair">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/shopmanagement.jpg" alt="Shop Management">
                      </div>
                      <div class="carousel-item">
                        <img src="/images/dibnowmain.jpg" alt="Dibnow Main">
                      </div>
                    </div>
                  </div>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="dark-transparent sidebartoggler"></div>
  <!-- Import Js Files -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
