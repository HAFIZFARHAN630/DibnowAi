                                    let countries = []; // Store fetched countries
                                  
                                    // Fetch countries from API
                                    async function fetchCountries() {
                                      try {
                                        const response = await fetch(apiUrl1);
                                        if (!response.ok) throw new Error('Network response was not ok');
                                        const data = await response.json();
                                        countries = data.data.map(country => country.country); // Store only country names
                                      } catch (error) {
                                        console.error('Error fetching countries:', error);
                                        suggestions.innerHTML = '<div class="list-group-item">Error loading countries</div>';
                                      }
                                    }
                                  
                                    // Show suggestions based on input
                                    function showSuggestions(filteredCountries) {
                                      suggestions.innerHTML = ''; // Clear previous suggestions
                                      if (filteredCountries.length === 0) {
                                        suggestions.innerHTML = '<div class="list-group-item">No matches found</div>';
                                        return;
                                      }
                                  
                                      filteredCountries.forEach(country => {
