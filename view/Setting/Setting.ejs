                                    }
                                  
                                    // Filter currencies as user types
                                    currencySearch.addEventListener('input', debounce(() => {
                                      const searchText = currencySearch.value.toLowerCase();
                                      const filteredCurrencies = currencies.filter(({ code }) =>
                                        code.toLowerCase().includes(searchText)
                                      );
                                      showCurrencySuggestions(filteredCurrencies);
                                    }, 300));
                                  
                                    // Close suggestions when clicking outside
                                    document.addEventListener('click', (e) => {
                                      if (!currencySuggestionsBar.contains(e.target) && e.target !== currencySearch) {
                                        currencySuggestionsBar.innerHTML = '';
                                      }
