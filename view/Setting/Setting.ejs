                                        div.addEventListener('click', () => {
                                          currencySearch.value = code; // Set the selected currency
                                          currencySuggestionsBar.innerHTML = ''; // Clear suggestions
                                        });
                                        currencySuggestionsBar.appendChild(div);
                                      });
                                    }
                                  
                                    // Fetch currencies and include symbols
                                    async function fetchCurrencies() {
                                      try {
                                        const response = await fetch(apiUrl);
                                        if (!response.ok) throw new Error('Failed to fetch currencies');
                                        const data = await response.json();
                                        currencies = Object.entries(data.conversion_rates).map(([code, rate]) => ({
